<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- <BOOTSTRAP> -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />

    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
    <!-- <BOOTSTRAP -->

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/homepage.css" type="text/css" />

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <style></style>
  </head>

  <body>
    <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>

    <!-- Random Stuff Links -->
    <div class="container-fluid col-11" id="homepage-container">
      <div class="mx-auto">
        <h1>Random Links About Stuff</h1>

        <div class="scrolling-wrapper ml-3 mr-3">
          <div class="col-md-6 col-lg-5 col-sm-10">
            <div class="card m-3">
              <img src="images/how_to_kajaja.png" class="img-fluid" />
            </div>
            <div class="card m-3">
              <img src="images/kajaja_covid.png" class="img-fluid" />
            </div>
            <div class="card m-3">
              <img src="images/local_economy.png" class="img-fluid" />
            </div>
          </div>
        </div>

        <% if(recentlyViewed) {%>

        <!-- Recently Seen Links -->
        <h1>Recently Seen/ Recommended for you</h1>
        <div id="recentlyViewed-container">
          <div class="row mr-3 ml-3">
            <div class="scrolling-wrapper ml-3 mr-3">
              <div class="col-md-6 col-lg-5 col-sm-10">
                <% recentlyViewed.forEach(listing => { %>
                <div class="card m-3">
                  <img
                    src="<%= listing.main_image %>"
                    class="card-img-top"
                    alt="..."
                  />
                  <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text text-success">
                      $<%= listing.price %>
                    </p>
                    <div class="text-center">
                      <a
                        href="/api/widgets/listings/<%= listing.id %>"
                        class="btn btn-primary"
                        >See item</a
                      >
                    </div>
                  </div>
                </div>
                <%})%>
              </div>
            </div>
          </div>
          <%}%>
        </div>

        <!-- Popular Categories Links -->
        <div id="popular-categories-container">
          <h1>Popular Categories</h1>
          <div class="row">
            <div class="scrolling-wrapper ml-3 mr-3">
              <div class="col-md-5 col-lg-5 col-sm-10">
                <div class="card m-3 bg-transparent">
                  <h2 class="text-center">Furnitures</h2>
                  <a
                    href="/api/widgets/listings?category=books"
                    class="col-lg-5 col-6 mt-2"
                    ><img src="images/box_furniture.png"
                  /></a>
                </div>
                <div class="card m-3 bg-transparent">
                  <h2 class="text-center">Cars</h2>
                  <a
                    href="/api/widgets/listings?category=cars"
                    class="col-lg-5 col-6 mt-2"
                    ><img src="images/box_car.png" width="100%"
                  /></a>
                </div>

                <div class="card m-3 bg-transparent">
                  <h2 class="text-center">Apartments</h2>
                  <a
                    href="/api/widgets/listings?category=furniture"
                    class="col-lg-5 col-6 mt-2"
                    ><img src="images/box_apartment.png" width="100%"
                  /></a>
                </div>
                <div class="card m-3 bg-transparent">
                  <h2 class="text-center">Electronics</h2>
                  <a
                    href="/api/widgets/listings?category=electronics"
                    class="col-lg-5 col-6 mt-2"
                    ><img src="images/box_electronic.png" width="100%"
                  /></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
