      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
      <!-- <BOOTSTRAP> -->

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

  </head>

  <style>
    html, body {
    height: auto;
  }
    .container{
      height:100%;
    }
    img{
      border-radius:50px;
      border:1px solid black;
    }
  </style>
  <body>
    <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>
    <div class="container">
      <div id="my-messages-title">
        <h1>Account Information</h1>
        <hr />
      </div>
      <section>
    <% if(message) {%>
      <div class="alert alert-warning" role="alert">
        <%= message %>
      </div>
    <%}%>
      <div class="card">
        <div class="card-body">
          <div class='d-flex justify-content-center' >
            <img src="/<%= user.profile_pic_url %>">
          </div>
          <h4 class="card-text text-warning"><a href="/api/widgets/add-images/abc">Click here to change your Avatar</a></h4>

          <form method="POST" action="/api/users/my-account">

            <label for="userName" class="mt-3">Change User Name</label>
            <input type="text" class="form-control" id='account_name' value="<%= user.name %>" name='name'><br>

            <label for="form_phone" class="mt-3">Change Phone Number</label>
            <input type="tel" class="form-control" id='form_phone' value="<%= user.phone_number %>" name='phone'><br>

            <label for="email" class="mt-3">Change Email Account</label>
            <input type="email" class="form-control" id='form_email' value="<%= user.email %>" name='email'><br>

            <label for="newpassword" class="mt-3">Change Password</label>
            <input type="password" class="form-control" id='newpassword' value="" name='newpassword'><br>

            <label for="password" class="mt-3">Current Password</label>
            <input required type="password" class="form-control" id='password' value="" name='password'>
            <small id="emailHelp" class="form-text text-muted">Please provide your actual password to validate any account changes.</small>
            <br>

            <button type="submit" class="btn btn-primary mt-3">
              Save my changes
            </button>
          </form>
        </div>
      <div class="card-footer text-muted"></div>
      </div>
    </section>
  </body>
</html>
