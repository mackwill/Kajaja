<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Post Ad</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- <BOOTSTRAP> -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk"
      crossorigin="anonymous"
    />

    <script
      src="https://code.jquery.com/jquery-3.5.1.js"
      integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>

    <!-- CSS -->
    <link rel="stylesheet" href="/styles/createListing.css" type="text/css" />

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  </head>

  <body>
    <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>
    <!-- Page for user to create their new listing -->
    <div class="container col-md-10 col-sm-11" id="create-listing-container">
      <h4 class="card-title mt-3 text-center">Create Your Ad</h4>
      <div class="card mx-auto">
        <form method="POST" action="/api/widgets/create-listing">
          <div class="form-group col-auto">
            <label for="form_title">Title</label>
            <textarea
              type="text"
              class="form-control"
              name="title"
              id="form_title"
            ></textarea>
            <small id="titleHelp" class="form-text text-muted counter"
              >Maximum of 150 characters</small
            >
          </div>
          <div class="row">
            <div
              class="form-group input-group col-md-6 col-sm-12"
              id="price-row"
            >
              <div class="input-group-prepend">
                Price: $
              </div>
              <input type="number" name="price" value="0.0" />
            </div>
            <fieldset class="form-group col-md-4 col-sm-10">
              <div class="row">
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="isTrade"
                    id="sellOrTrade1"
                    value="false"
                    checked
                  />
                  <label class="form-check-label" for="sellOrTrade">
                    Sell
                  </label>
                </div>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="isTrade"
                    id="sellOrTrade2"
                    value="true"
                  />
                  <label class="form-check-label" for="sellOrTrade">
                    Trade
                  </label>
                </div>
              </div>
            </fieldset>
          </div>
          <div class="form-group">
            <label for="form_category">Category select</label>
            <select class="form-control" id="form_category" name="category">
              <option value="...">Select a category</option>
              <option value="car">Car</option>
              <option value="furniture">Furniture</option>
              <option value="book">Book</option>
              <option value="outdoor">Outdoor</option>
              <option value="appartment">Appartment</option>
            </select>
          </div>
          <div class="form-group col-auto">
            <label for="form_description">Description</label>
            <textarea
              type="text"
              class="form-control"
              name="description"
              id="form_description"
            ></textarea>
            <small id="titleHelp" class="form-text text-muted"
              >Maximum of 1000 characters</small
            >
          </div>

          <div class="form-row col-auto" id="seller-location">
            <div class="mb-3">
              <label for="form_city">City</label>
              <input
                type="text"
                class="form-control is-invalid"
                id="form_city"
                name="city"
                required
              />
              <div class="mt-3 mb-3">
                <label for="form_province">Province</label>
                <select
                  class="custom-select is-invalid"
                  id="form_province"
                  name="province"
                  required
                >
                  <option selected disabled value="">Choose...</option>
                  <option>Quebec</option>
                  <option>Ontario</option>
                </select>
              </div>
              <div class="mb-3">
                <label for="form_postal_code">Zip</label>
                <input
                  type="text"
                  class="form-control is-invalid"
                  name="postal_code"
                  id="form_postal_code"
                  required
                />
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-success btn-block p-3">Post my ad</button>
        </form>
      </div>
    </div>
  </body>
</html>
