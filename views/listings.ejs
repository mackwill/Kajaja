<!DOCTYPE html>
<html lang="en">
  <head>
    <title>View Listing</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/searchBar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/listings.css" type="text/css" />

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/navbar_responsive.js"></script>
    <script
      type="text/javascript"
      src="/scripts/category_responsive.js"
    ></script>
    <script type="text/javascript" src="/scripts/listings-render.js"></script>
  </head>

  <body>
    <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>
    <section>
      <div class="custom-control custom-switch mt-3 mb-3 ml-3">
        <input
          type="checkbox"
          class="custom-control-input"
          id="notificationSwitch"
        />
        <label class="custom-control-label" for="notificationSwitch"
          >Get notified when new items are posted</label
        >
      </div>
    </section>
    <section id="all-listings">
      <% listings.forEach(listing => { %>

      <div class="container col-lg-10 col-sm-11 my-3">
        <a class="listing-link" href="/api/widgets/listings/<%=listing.id%>">
          <div class="row">
            <div class="img-container col-lg-3 col-md-3 col-sm-3 col-xs-3">
              <img src="//placehold.it/200" alt="" />
            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-9">
              <div class="listing-header">
                <div class="listing-header-left">
                  <h3><%= listing.title %></h3>
                </div>
                <div class="listing-header-right">
                  <h3 class="text-success">$<%= listing.price %></h3>
                </div>
              </div>
              <div class="text listing-body">
                <p><%= listing.description %></p>
              </div>
            </div>
            <div class="w-100"></div>
          </div>
        </a>
      </div>

      <% }) %>
    </section>
    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
