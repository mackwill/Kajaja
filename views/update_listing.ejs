<style>
  html, body {
  height: auto;
}
  .container{
    height:100%;
  }
  img{
    border-radius:50px;
    border:1px solid black;
  }
</style>
<body>
  <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>
  <div class="container">
    <div id="my-messages-title">
      <h1>Listing Information</h1>
      <hr />
    </div>
    <section>
      <% if(message) {%>
        <div class="alert alert-warning" role="alert">
          <%= message %>
        </div>
      <%}%>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <img class='col-sm-3' src="<%= listing.main_image %>">
          <!-- <img class='col-sm-3' src="">
          <img class='col-sm-3' src="">
          <img class='col-sm-3' src=""> -->
        </div>
        <h4 class="card-text text-warning"><a href="/api/widgets/add-images/<%= listing.id %>">Add images to your listing</a></h4>

        <form method="POST" action="/api/widgets/update/listings/<%= listing.id %>">
          <div class="form-group">
          <label for="userName" class="mt-3">Change Listing Title</label>
          <input type="text" class="form-control" id='listing_title' value="<%= listing.title %>" name='title'><br>
        </div>
        <div class="form-group">
          <label for="description" class="mt-3">Change Listing Description</label>
          <textarea class="form-control" id='listing_description' name='description'><%= listing.description %></textarea><br>
        </div>
        <div class="form-group col-md-4">
          <label for="category" class="mt-3">Change Listing Category</label>

          <select id="search_category" class="form-control" name='category'>
            <option selected>Categories...</option>
            <option value="cars">Car</option>
            <option value="furniture">Furniture</option>
            <option value="books">Book</option>
            <option value="electronics">Electronic</option>
            <option value="outdoor">Outdoor</option>
            <option value="toys">Toys</option>
            <option value="services">Services</option>
            <option value="apartments">Apartments</option>
          </select>
        </div>

          <label for="form_phone" class="mt-3">Change Price</label>
          <input type="number" class="form-control" id='listing_price' value="<%= listing.price %>" name='price'><br>
          <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input" id="customSwitch1" value="true" name="sold" <% if(listing.sold){ %> checked <%}%> >
            <label class="custom-control-label" for="customSwitch1">Toggle if item was sold</label>
          </div>

          <button type="submit" class="btn btn-primary mt-3">
            Save my changes
          </button>
        </form>
      </div>
    <div class="card-footer text-muted"></div>
    </div>
  </section>
</body>
</html>
