    <script type="module" src="/kajaja/public/scripts/uploadImages.js"></script>

  </head>


  <style>
    html, body {
    height: auto;
  }
    .container{
      height:100%;
    }
      .addImage{
        order:1px solid black;
        padding:1em;
        border-radius:5px;
        background-color:white;
      }

  </style>
  <body>
    <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>
    <div class="container">
      <% if(fromUser){%>
      <div id="my-messages-title">
        <h1>Upload Your Avatar</h1>
        <hr />
      </div>
      <section>
        <form class="addImage" method="POST" action="/api/upload/avatar" enctype="multipart/form-data">

          <div class="form-group">
            <input type="file" class="form-control-file" name="avatar" id="exampleFormControlFile1" required oninvalid="this.setCustomValidity('Please upload select a file before submiting')">
          </div>

          <button type="submit" class="btn btn-primary p-3 btn-block">Save this image as my Avatar</button>
        </form>
      </section>
      <%}else{%>
      <% if(single_listing.main_image === 'https://via.placeholder.com/100x100'){%>
      <div id="my-messages-title">
        <h1>Upload Main Image to Your Listing</h1>
        <hr />
      </div>
      <section>
        <form class="addImage" method="POST" action="/api/upload/main/<%= single_listing.id %>" enctype="multipart/form-data">
          <div class="form-group">
            <input type="file" class="form-control-file" name="mainImage" id="exampleFormControlFile1" required oninvalid="this.setCustomValidity('Please upload select a file before submiting')">
          </div>
          <button type="submit" class="btn btn-primary p-3 btn-block">Save this image for my listing</button>
        </form>
      </section>
      <%}else{%>
        <div id="my-messages-title">
          <h1>Upload Images to Your Listing</h1>
          <hr />
        </div>
        <section>
          <form class="addImage" method="POST" action="/api/upload/photos/<%= single_listing.id %>" enctype="multipart/form-data">

            <div class="form-group">
              <input type="file" class="form-control-file" name="photos" id="exampleFormControlFile1" required oninvalid="this.setCustomValidity('Please upload at least 2 images')">
            </div>
            <div class="form-group">
              <input type="file" class="form-control-file" name="photos" id="exampleFormControlFile1" required oninvalid="this.setCustomValidity('Please upload at least 2 iamges')">
            </div>
            <div class="form-group">
              <input type="file" class="form-control-file" name="photos" id="exampleFormControlFile1">
            </div>
            <button type="submit" class="btn btn-primary p-3 btn-block">Save those images for my listing</button>
          </form>
        </section>
        <%}%>
        <%}%>
      </div>
  </body>
  </html>
