<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <!-- <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/bulma.sass"
    /> -->

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/navbar.css" type="text/css" />
    <link rel="stylesheet" href="/styles/searchBar.css" type="text/css" />

    <script
      defer
      src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"
    ></script>
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="/scripts/navbar_responsive.js"></script>
    <script
      type="text/javascript"
      src="/scripts/category_responsive.js"
    ></script>
    <style>

.top-stripe{
  display:flex;
  flex-direction:column;
  align-items:center;
}
.top-stripe img{
  border-radius:50px;
  margin-top:-3em;
  border:1px solid black;
}
.middle-stripe{
  display:flex;
  text-align:center;
}
.middle-stripe div{
  width:100%;
}
.lower-stripe{
  display:flex;
}
.lower-stripe div{
  width:100%;
  margin-top:2em;
  text-align:center;
  border-bottom:1px solid grey;
}
.lower-stripe div:hover{
  background-color:grey;
  cursor:pointer;
}

    </style>
  </head>
  <body>
    <%- include("partials/_navbar") %> <%- include("partials/_searchBar") %>

    <div class="main">
      <div class="banner"><img width="100%" src="https://via.placeholder.com/500x75/808080"></div>
      <div class="top-stripe">
        <img src="<%= data[0].profile_pic_url %>">
        <h2><%= data[0].name %><h2>
      </div>
      <div class="middle-stripe">
        <div><span>--</span><br>Avg Reply</div>
        <div><span>--</span><br>Reply Rate</div>
        <div><span><%= data.unix %></span><br>On Kijiji since</div>
      </div>
      <div class="lower-stripe">
        <div class="isActive">Listings</div>
        <div>Reviews</div>
      </div>
    </div>
    <section id="all-listings">
      <% data.forEach(listing => { %>
      <a class="listing-link" href="#">
        <article class="listing">
          <div class="listing-photo">
            <img src="https://via.placeholder.com/100x100" />
          </div>
          <div class="listing-content container-fluid">
            <div class="listing-header">
              <div class="listing-header-left">
                <h3><%= listing.title %></h3>
              </div>
              <div class="listing-header-right">
                <h3><%= listing.price %></h3>
              </div>
            </div>
            <div class="listing-content">
              <%= listing.description %>
            </div>
          </div>
        </article>
      </a>
      <% }) %>
    </section>

  </body>
</html>
